setAvailableApartments(struct ApartmentsInfo *availableApartments, char *type, char *address, char *city, int rooms, int area, float price, int floor) {
    strcpy(availableApartment->type, type);
    strcpy(availableApartment->address, address);
    strcpy(availableApartment->city, city);
    availableApartment->rooms = rooms;
    availableApartment->area = area;
    availableApartment->price = price;
    availableApartment->floor = floor;
}

void allAvailableApartments() {
